@model Entity.Entities.Address
@{
    ViewData["Title"] = "EditAddress";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@using (Html.BeginForm("EditAddress", "UserAddress", FormMethod.Post))
{
    @Html.TextBoxFor(x=>x.Id,new {@style="display:none;"})
    <center class="mb-2 mt-2">@Html.TextBoxFor(x=>x.Title,new {@style="padding: 4px 10px;margin-left:-10px;width:50%;"})</center>
    <center class="mb-2 mt-2">@Html.TextAreaFor(x=>x.AddressText,new {@style="padding: 4px 10px;margin-left:-10px;width:50%;resize:none;outline:none;"})</center>
    <center>
        <div class="mb-2">
            @Html.DropDownList("City", new List<SelectListItem>
        {
        new SelectListItem { Value = "Bursa", Text = "Bursa" },
        new SelectListItem { Value = "Ankara", Text = "Ankara" },
        new SelectListItem { Value = "İstanbul", Text = "İstanbul" }
        }, new {style="padding: 4px 10px;margin-left:-10px;width:50%;"})
        </div>
    </center>
    <center class="mt-2">
        <button style="padding: 4px 10px;margin-left:-10px;" class="btn-success text-center">Güncelle</button>
    </center>
}
