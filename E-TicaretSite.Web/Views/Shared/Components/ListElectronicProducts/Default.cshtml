@model IEnumerable<Entity.Entities.Product>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="https://unpkg.com/flickity@2/dist/flickity.min.css">
<style>
    .Category .carousel-cell {
        width: 20%;
        padding: 10px;
    }

    .checked {
        color: orange;
    }
</style>
<div class="carousel" data-flickity='{ "draggable": true, "pageDots": false}'>
    @foreach (var item in Model)
    {
        <div style="border:1px solid black;margin:10px;border-radius:10px;" class="col-2 carousel-cell">
            <div class="col-12" style="height:250px;">
                <a href="/Product/ProductPage/@item.Id">
                    <img src="@item.ThumbnailImage" width="100%" height="250">
                </a>
            </div>
            <div class="col-12 text-center" style="height:50px;">
                @item.Name
            </div>
            <div class="col-12 text-center" style="height:30px;">

                @if (item.Star == 5)
                {
                    <span class="fa fa-star checked"></span>
                    <span class="fa fa-star checked"></span>
                    <span class="fa fa-star checked"></span>
                    <span class="fa fa-star checked"></span>
                    <span class="fa fa-star checked"></span>
                    <span>@item.Star</span>
                }
                @if (item.Star == 4)
                {
                    <span class="fa fa-star checked"></span>
                    <span class="fa fa-star checked"></span>
                    <span class="fa fa-star checked"></span>
                    <span class="fa fa-star checked"></span>
                    <span class="fa fa-star "></span>
                    <span>@item.Star</span>
                }
                @if (item.Star == 3)
                {
                    <span class="fa fa-star checked"></span>
                    <span class="fa fa-star checked"></span>
                    <span class="fa fa-star checked"></span>
                    <span class="fa fa-star "></span>
                    <span class="fa fa-star "></span>
                    <span>@item.Star</span>
                }
                @if (item.Star == 2)
                {
                    <span class="fa fa-star checked"></span>
                    <span class="fa fa-star checked"></span>
                    <span class="fa fa-star "></span>
                    <span class="fa fa-star "></span>
                    <span class="fa fa-star "></span>
                    <span>@item.Star</span>
                }
                @if (item.Star == 1)
                {
                    <span class="fa fa-star checked"></span>
                    <span class="fa fa-star "></span>
                    <span class="fa fa-star "></span>
                    <span class="fa fa-star "></span>
                    <span class="fa fa-star "></span>
                    <span>@item.Star</span>
                }
            </div>
            <div class="col-12" style="height:60px;">
                @if (item.Discount == 0)
                {
                    <div class="col-12 text-center pt-2 pb-3"><b>@item.Price.ToString("0")</b> ₺</div>
                }
                @if (item.Discount > 0)
                {
                    <div class="col-12 text-center">
                        <span style="text-decoration:line-through;opacity: 0.85;">@item.Price.ToString("0") ₺</span>
                        <b>%@item.Discount.ToString("0")</b>
                    </div>
                    var discountedPrice =
                    item.Price - (item.Price * @item.Discount) / 100;

                    <div class="col-12 text-center text-danger">
                        <b>
                            @discountedPrice.ToString("0")
                        </b> ₺
                    </div>
                }
            </div>
            <div style="height:50px;" class="col-12 text-center">
                @await Html.PartialAsync("~/Views/Cart/AddToCart.cshtml", item.Id)
            </div>
        </div>
    }
</div>

<script src="https://unpkg.com/flickity@2/dist/flickity.pkgd.min.js"></script>
