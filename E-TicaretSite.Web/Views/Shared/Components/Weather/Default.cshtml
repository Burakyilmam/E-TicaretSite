<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<div class="text-center col-sm-4 mt-2 mb-2">
    <div class="card text-white" style="background-color:green;;height:150px;">
        <div class="card-body">
            <h5>     
                    <div class="row">
                        <div class="col-6 mt-1">
                            <img src="@ViewBag.iconurl" width="120" />
                        </div>
                        <div class="col-6 mt-1">
                            <div class="col-12 pb-2">@ViewBag.city</div>
                        <div class="col-12 pb-2">
                            <span class="counter" data-val="@ViewBag.temperature">0</span>
                            <span>°C</span>
                        </div>
                        <div class="col-12 btn btn-info">
                            <a style="text-decoration:none;color:White;width:100%" href="https://openweathermap.org/city/750268">Detaylar</a>
                        </div>
                        </div>
                    </div>
            </h5>
        </div>
    </div>
</div>
<script src="~/js/NumberCounter.js"></script>