@{
    ViewData["Title"] = "Ürün Ekle";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
﻿
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<div style="display:flex" class="col-12 text-center justify-content-center">
    <div class="col-6">
        <form action="/Product/ProductAdd/" method="post">
            <input type="text" class="mt-2 mb-2" style="width:50%;padding: 4px 10px;outline:none" name="Name" placeholder="Ürün Adını Giriniz." required />
            <input type="text" class="mt-2 mb-2" style="width:50%;padding: 4px 10px;outline:none" name="Description" placeholder="Ürün Açıklamasını Giriniz." required />
            <input type="text" class="mt-2 mb-2" style="width:50%;padding: 4px 10px;outline:none" name="ThumbnailImage" placeholder="Ürün Resmini Giriniz." required />
            <input type="number" class="mt-2 mb-2" style="width:50%;padding: 4px 10px;outline:none" name="Price" placeholder="Ürün Fiyatı" required />
            <input type="number" class="mt-2 mb-2" style="width:50%;padding: 4px 10px;outline:none" name="Discount" placeholder="Ürün İndirim Oranı" required />
            <input type="number" class="mt-2 mb-2" style="width:50%;padding: 4px 10px;outline:none" name="Stock" placeholder="Stok Adeti" required />
            @await Component.InvokeAsync("ListProductCategory")
            @await Component.InvokeAsync("ListProductBrand")
            <br />
            <input class="text-center btn-success" style="padding: 4px 10px;margin-left:-10px;" type="submit" value="Ekle" />
        </form>
    </div>
</div>