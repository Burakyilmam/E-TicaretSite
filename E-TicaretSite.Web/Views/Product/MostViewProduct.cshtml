@using Entity.Entities
@model List<Product>
@{
    ViewData["Title"] = "Ürünler";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@if (!Model.Any())
{
    <div style="text-align:center">
        <b>Ürün Bulunamadı.</b>
    </div>
    <a href="/Product/ProductAdd/">Ekle</a>
}
@if (Model.Any())
{
    <table>
        <tr class="text-center">
            <th>ID</th>
            <th>Resmi</th>
            <th>Adı</th>
            <th>Marka</th>
            <th>Açıklaması</th>
            <th>Fiyatı</th>
            <th>Stok Adedi</th>
            <th>Kategorisi</th>
            <th>Statüsü</th>
            <th>Güncelle</th>
            <th>Sil</th>
            <th>Ürün Sayfası</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr class="text-center">
                <td>@item.Id</td>
                <td><img width="100" src="@item.ThumbnailImage" /></td>
                <td>@item.Name</td>
                <td><a href="/Product/ListBrandProduct/@item.BrandId">@item.Brand.Name</a></td>
                <td>@item.Description</td>
                <td>@item.Price.ToString("0")</td>
                <td>@item.Stock</td>
                <td><a href="/Product/ListCategoryProduct/@item.CategoryId">@item.Category.Name</a></td>
                <td>
                    @if (item.Statu == true)
                    {
                        <a id="statu" style="padding:2px 12px;border-radius:80%" class="@item.Statu btn-success">
                        </a>
                    }
                    else
                    {
                        <a id="statu" style="padding:2px 12px;border-radius:80%" class="@item.Statu btn-danger">
                        </a>
                    }
                </td>
                <td>
                    <a class="btn-warning text-white" style="border-radius: 5px;padding: 4px 10px;" href="/Product/EditProduct/@item.Id">
                        <i class="fa fa-refresh"></i>
                    </a>
                </td>
                <td>
                    <a class="btn-primary" style="border-radius: 5px;padding: 4px 10px;" href="/Product/ProductDelete/@item.Id">
                        <i class="fa fa-trash"></i>
                    </a>
                </td>
                <td>
                    <a class="btn-dark" style="border-radius: 5px;padding: 4px 10px;" href="@Url.Action("GetProductImages", "Product", new {  productid = item.Id })">
                        <i class="fa fa-info"></i>
                    </a>
                </td>
                <td><a class="btn-info" style="border-radius: 5px;padding: 4px 10px;" href="/Product/ProductPage/@item.Id">Ürün Sayfası</a></td>
            </tr>
        }
    </table>
    <center class="mt-2">
        <a class="btn-success" style="border-radius: 5px;padding: 4px 10px;" href="/Product/ProductAdd/">Ekle</a>
    </center>

}



