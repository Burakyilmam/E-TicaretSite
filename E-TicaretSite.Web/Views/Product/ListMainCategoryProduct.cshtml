@using Entity.Entities
@using X.PagedList.Mvc.Bootstrap4.Core;
@using X.PagedList;
@using X.PagedList.Mvc.Core;
@model IPagedList<Product>
@{
    ViewData["Title"] = "Ürünler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .checked {
        color: orange;
    }
    #card{
        border: 0.5px solid black;
        border-radius: 5px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.5);
        margin: 10px;
        overflow: hidden;
        max-width: 100%;
        height: 470px;
        text-overflow: ellipsis;
        padding: 10px;
    }

    #name {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        max-width: 100%;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
</style>
@if (!Model.Any())
{
    <div class="alert alert-danger text-center mt-4">
        <b>Aradığınız Ürün Bulunmamaktadır.</b>
    </div>
}
<div style="display:flex;flex-wrap:wrap;justify-content:center;">
    @foreach (var item in Model)
    {
        <div class="col-sm-4 col-md-3 col-lg-2" id="card">
            <div class="col-12">
                <img src="@item.ThumbnailImage" width="100%" height="250">
            </div>
            <div id="name" class="col-12 text-center">
                @item.Name
            </div>
            <div class="col-12 text-center mt-2 mb-2">

                @if (item.Star == 5)
                {
                    <span class="fa fa-star checked"></span>
                    <span class="fa fa-star checked"></span>
                    <span class="fa fa-star checked"></span>
                    <span class="fa fa-star checked"></span>
                    <span class="fa fa-star checked"></span>
                    <span>@item.Star</span>
                }
                @if (item.Star == 4)
                {
                    <span class="fa fa-star checked"></span>
                    <span class="fa fa-star checked"></span>
                    <span class="fa fa-star checked"></span>
                    <span class="fa fa-star checked"></span>
                    <span class="fa fa-star "></span>
                    <span>@item.Star</span>
                }
                @if (item.Star == 3)
                {
                    <span class="fa fa-star checked"></span>
                    <span class="fa fa-star checked"></span>
                    <span class="fa fa-star checked"></span>
                    <span class="fa fa-star "></span>
                    <span class="fa fa-star "></span>
                    <span>@item.Star</span>
                }
                @if (item.Star == 2)
                {
                    <span class="fa fa-star checked"></span>
                    <span class="fa fa-star checked"></span>
                    <span class="fa fa-star "></span>
                    <span class="fa fa-star "></span>
                    <span class="fa fa-star "></span>
                    <span>@item.Star</span>
                }
                @if (item.Star == 1)
                {
                    <span class="fa fa-star checked"></span>
                    <span class="fa fa-star "></span>
                    <span class="fa fa-star "></span>
                    <span class="fa fa-star "></span>
                    <span class="fa fa-star "></span>
                    <span>@item.Star</span>
                }
                @if (item.Star == 0)
                {
                    <span class="fa fa-star "></span>
                    <span class="fa fa-star "></span>
                    <span class="fa fa-star "></span>
                    <span class="fa fa-star "></span>
                    <span class="fa fa-star "></span>
                    <span>@item.Star</span>
                }
            </div>
            <div class="col-12 mb-3">
                @if (item.Discount == 0)
                {
                    <div class="col-12 text-center pt-2 pb-3"><b>@item.Price.ToString("0")</b> ₺</div>
                }
                @if (item.Discount > 0)
                {
                    <div class="col-12 text-center">
                        <span style="text-decoration:line-through;opacity: 0.85;">@item.Price.ToString("0") ₺</span>
                        <b>%@item.Discount.ToString("0")</b>
                    </div>
                    var discountedPrice =
                    item.Price - (item.Price * @item.Discount) / 100;

                    <div class="col-12 text-center text-danger">
                        <b>
                            @discountedPrice.ToString("0")
                        </b> ₺
                    </div>
                }
            </div>
            <div class="col-12 text-center">
                @await Html.PartialAsync("~/Views/Cart/AddToCart.cshtml", item.Id)
            </div>
        </div>
    }
    <div class="col-12" style="display:flex;justify-content:center;">
        @Html.PagedListPager((IPagedList)Model,page=>Url.Action("ListMainCategoryProduct",new {page}),Bootstrap4PagedListRenderOptions.ClassicPlusFirstAndLast)
    </div>
</div>




