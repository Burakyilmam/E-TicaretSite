@using Entity.Entities
@model List<Product>
@{
    ViewData["Title"] = "Ürünler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<table>
    <tr>
        <th>Ürün ID</th>
        <th>Ürün Adı</th>
        <th>Ürün Açıklaması</th>
        <th>Ürün Fiyatı</th>
        <th>Ürün Stok Adedi</th>
        <th>Ürün Resmi</th>
        <th>Ürün Kategorisi</th>
        <th>Ürün Statüsü</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.Price</td>
            <td>@item.Stock</td>
            <td><img width="100" src="@item.ThumbnailImage" /></td>
            <td>@item.Category.Name</td>
            <td>@item.Statu</td>
            <td><a href="">Güncelle</a></td>
            <td><a href="">Sil</a></td>
        </tr>
    }
</table>


