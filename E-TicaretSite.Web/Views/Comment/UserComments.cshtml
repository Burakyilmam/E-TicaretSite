@model IEnumerable<Entity.Entities.Comment>

@if (!Model.Any())
{
    <div style="text-align:center">
        <b>Yorum Bulunamadı.</b>
    </div>
}
@if (Model.Any())
{
    @foreach (var y in Model)
    {
        <table class="text-center">
            <tr>
                <th>Yorum</th>
                <th>Ürün</th>
            </tr>
            <tr>
                <td>@y.CommentText</td>
                <td>@y.Product.Name</td>
            </tr>
        </table>
    }
}
